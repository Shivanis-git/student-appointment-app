        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    // sys_id of Students group
    var groupSysId = 'ec1c015ec3f7a610dc031453e4013117';

    // Check if user already in group
    var gm = new GlideRecord('sys_user_grmember');
    gm.addQuery('user', current.sys_id);
    gm.addQuery('group', groupSysId);
    gm.query();

    if (!gm.next()) {
        // Add user to Students group
        var newMember = new GlideRecord('sys_user_grmember');
        newMember.initialize();
        newMember.user = current.sys_id;
        newMember.group = groupSysId;
        newMember.insert();
    }

})(current, previous);
